{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="h1 text-black"><strong>Formulaire des expositions</strong></h1>
    <br>
{{ form_start(form, {attr :{novalidate: 'novalidate'}}) }}
    <div class="text-danger">
    {{ form_errors(form) }}
    </div>
        <div class="form-group row text-black">
            {{ form_label(form.name, 'Nom :', {label_attr :{class: 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.name, {attr :{class: 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group row text-black">
            {{ form_label(form.description, 'Description :', {label_attr :{ class: 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.description, {attr :{ class: 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group row text-black">
            {{ form_label(form.date, 'Date :', {label_attr :{class: 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.date, {attr :{class: 'form-control'}}) }}
            </div>
        </div>
        <div class="row float-right my-3">
        <button class="btn btn-success mr-2" type="submit">Valider</button>
            <a href="{{ url('admin.exposition.index') }}" class="btn btn-danger">Annuler</a>
        </div>
    {{ form_end(form) }}
{% endblock %}

