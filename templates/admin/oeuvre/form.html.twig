{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="h2 text-black"><b>Formulaire d'un oeuvre</b></h1>
    <br>
    {{ form_start(form, {attr :{novalidate: 'novalidate'}}) }}
    <div class="text-danger">
        {{ form_errors(form) }}
    </div>
    <div class="form-group row text-black">
        {{ form_label(form.name, 'Nom  de l\'oeuvre:', {label_attr :{class: 'col-sm-2 col-form-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.name, {attr :{class: 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group row text-black">
        {{ form_label(form.description, 'Description :', {label_attr :{ class: 'col-sm-2 col-form-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.description, {attr :{ class: 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group row text-black">
        {{ form_label(form.image, 'Image :', {label_attr :{class: 'col-sm-2 col-form-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.image, {attr :{class: 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group row text-black">
        {{ form_label(form.category, 'Cat√©gorie :', {label_attr :{class: 'col-sm-2 col-form-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.category, {attr :{class: 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group row text-black">
        {{ form_label(form.artiste, 'Artiste :', {label_attr :{class: 'col-sm-2 col-form-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.artiste, {attr :{class: 'form-control'}}) }}
        </div>
    </div>
    <div class="row float-right my-3">
        <button class="btn btn-success mr-2" type="submit">Valider</button>
        <a href="{{ url('admin.oeuvre.index') }}" class="btn btn-danger">Annuler</a>
    </div>
    {{ form_end(form) }}
{% endblock %}

